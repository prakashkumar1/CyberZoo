<com.andexert.library.RippleView
    android:id="@+id/more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/mainLayout">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/imageDefault"
                android:id="@+id/iv1"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/imageDefault"
                android:id="@+id/iv2"
                android:layout_toRightOf="@+id/iv1"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/imageDefault"
                android:id="@+id/iv3"
                android:layout_toRightOf="@+id/iv2"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/imageDefault"
                android:id="@+id/iv4"
                android:layout_below="@+id/iv1"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/imageDefault"
                android:id="@+id/iv5"
                android:layout_toRightOf="@+id/iv4"
                android:layout_below="@+id/iv2"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/iv6"
                android:background="@color/imageDefault"
                android:layout_below="@+id/iv3"
                android:layout_toRightOf="@+id/iv5"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/iv7"
                android:background="@color/imageDefault"
                android:layout_below="@+id/iv4"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/iv8"
                android:layout_toRightOf="@+id/iv7"
                android:background="@color/imageDefault"
                android:layout_below="@+id/iv5"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/iv9"
                android:layout_below="@+id/iv6"
                android:background="@color/imageDefault"
                android:layout_toRightOf="@+id/iv8"
                android:layout_margin="5dp" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/mainImage"
                android:visibility="gone"
                android:layout_centerInParent="true" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mainLayout"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/relativeLayout">

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:layout_toRightOf="@+id/tvPoints1"
                    android:textSize="14sp"
                    android:layout_alignBottom="@+id/tvPoints1"
                    android:layout_alignTop="@+id/tvPoints1"
                    android:elevation="4dp"
                    android:text="player 1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_tv"
                    android:layout_margin="1dp"
                    android:text="5"
                    android:id="@+id/tvPoints1"
                    android:gravity="center"
                    android:textColor="@color/buttonColor"
                    android:textSize="30sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                >

                <com.gc.materialdesign.views.ButtonRectangle
                    android:id="@+id/player2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    android:textSize="14sp"
                    android:layout_alignBottom="@+id/tvPoints2"
                    android:layout_alignTop="@+id/tvPoints2"
                    android:layout_toLeftOf="@+id/tvPoints2"
                    android:elevation="4dp"
                    android:text="player 2" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_tv"
                    android:layout_alignParentRight="true"
                    android:layout_margin="1dp"
                    android:text="5"
                    android:textColor="@color/buttonColor"
                    android:id="@+id/tvPoints2"
                    android:gravity="center"
                    android:textSize="30sp" />
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


</com.andexert.library.RippleView>
