<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:padding="5dp"
    tools:context="com.twinvaves.darshan.darshantestproject.OptionsActivity">


    <RelativeLayout
        android:id="@+id/SoundRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/switchSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Sound"
            android:textColor="@color/green"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/SoundRelativeLayout"
        android:layout_margin="2dp"
        android:background="@color/green" />

    <RelativeLayout
        android:id="@+id/BackgroundRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignStart="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvBackgrounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivThumbnail"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivThumbnail"
            android:gravity="center"
            android:text="Backgrounds"
            android:textColor="@color/green"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/BackgroundRelativeLayout"
        android:layout_margin="2dp"
        android:background="@color/green" />

    <RelativeLayout
        android:id="@+id/BackgroundRelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2"
        android:layout_below="@+id/view2"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/AdultMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Adult mode"
            android:textColor="@color/green"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/BackgroundRelativeLayout2"
        android:layout_margin="2dp"
        android:background="@color/green" />
</RelativeLayout>
